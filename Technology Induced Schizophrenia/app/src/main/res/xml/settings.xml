      <MultiSelectListPreference
          android:key="commands"
          android:title="Whisper Commands"
          android:summary="Enable selected vocal commands to be played."
          android:entries="@array/command_titles"
          android:entryValues="@array/command_descriptions"
          android:dialogTitle="Select Whisper Commands" />
      
		<SwitchPreference
